<p id="notice"><%= notice %></p>
<div class="show">
<p>
  <strong>タイトル</strong>
  <%= @read.title %>
</p>

<p>
  <strong>内容</strong>
  <%= @read.content %>
</p>

<p>
  <strong>日時</strong>
  <%= @read.start_time.strftime("%m-%d") %>
</p>

<%= link_to '編集', edit_read_path(@read) %>
<%= link_to '消去',read_path(@read.id), method: :delete, data: { confirm: '本当に?' } %>
<%= link_to '戻る', reads_path %>
</div>
