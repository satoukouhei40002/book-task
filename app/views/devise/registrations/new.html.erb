<%= render "shared/header" %>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
<div class='form-wrap-sign-up'> 
  <h2 class='form-header-text-sign-up'>
  サインアップ
  </h2>
  <div class="field-2">
    <%= f.label :nickname, "ニックネーム", class: "field-text-sign-up"  %> <br />
    <%= f.text_field :nickname, id:"nickname", class: "form-text-sign-up" %>
  </div>

  <div class="field-2">
    <%= f.label :email, "メールアドレス", class: "field-text-sign-up-1" %><br />
    <%= f.email_field :email, class:"input-default", id:"email", autofocus: true %>
  </div>

  <div class="field-2">
    <label class="field-text-sign-up-2">パスワード</label>
    <%= f.password_field :password, class:"input-default", id:"password",placeholder:"6文字以上" %>
  </div>
  <div class="field-2">
    <div class='form-text-wrap'>
      <label class="field-text-sign-up-3">パスワード(確認)</label>
    </div>
    <%= f.password_field :password_confirmation, class:"input-default", id:"password-confirmation", placeholder:"同じパスワードを入力" %>
  </div>

  <div class="actions">
    <button type="submit" class="btn btn-primary">新規登録</button>
  </div>
</div>
<% end %>