<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :nickname, "ニックネーム" %> <br />
    <span class="indispensable">必須</span>
    <%= f.text_field :nickname, id:"nickname" %>
  </div>

  <div class="field">
    <%= f.label :email, "メールアドレス" %><br />
    <span class="indispensable">必須</span>
    <%= f.email_field :email, class:"input-default", id:"email", autofocus: true %>
  </div>

  <div class="field">
    <label class="form-text">パスワード</label>
      <span class="indispensable">必須</span>
    </div>
    <%= f.password_field :password, class:"input-default", id:"password" %>
    <p class='info-text'>6文字以上</p>
  </div>

  <div class="field">
    <div class='form-text-wrap'>
      <label class="form-text">パスワード(確認)</label>
      <span class="indispensable">必須</span>
    </div>
    <%= f.password_field :password_confirmation, class:"input-default", id:"password-confirmation", placeholder:"同じパスワードを入力" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
